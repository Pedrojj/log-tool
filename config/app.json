{
  "environment": "development",

  "development": {
    "logOpts": {
      "useConsole"      : true,
      "consoleOpts"     : { "level" : "warning", "colorize" : true },
      "useFile"         : true,
      "fileOpts"        : { "level" : "debug", "filename" : "./error.log", "fileFlushDelay" : 1500 }
    }
  },

  "production": {
    "logOpts": {
      "useConsole"      : true,
      "consoleOpts"     : { "level" : "warning", "colorize" : true },
      "useFile"         : true,
      "fileOpts"        : { "level" : "info", "filename" : "./error.log" }
    }
  }
}
